<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/capsImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/gradient_background"
        android:contentDescription="Caps the Capybara" />

    <com.eastonlearning.SpeechBubbleView
        android:id="@+id/speechBubble"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/capsImage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/speechBubble"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="Welcome Easton!"
        android:textSize="28sp"
        android:textColor="#2E7D32"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8dp"
        android:padding="20dp"
        android:background="@drawable/text_bubble"
        android:elevation="4dp" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainText"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="BUTTON 1"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:elevation="6dp"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="BUTTON 2"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:elevation="6dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <com.eastonlearning.OnScreenKeyboard
        android:id="@+id/onScreenKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>